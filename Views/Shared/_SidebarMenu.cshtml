@using gLog_FrontEnd.Filters;
@model IEnumerable<SidebarMenuModel>

<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@Url.Content("~/Content/img/user2-160x160.jpg")" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p id="GHCODE_TEXT">@ViewBag.GHCODE</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> 登录 </a>
            </div>
        </div>

        <!-- search form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="查询...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">菜单</li>
            <!-- Optionally, you can add icons to the links -->


            @foreach (var parentMenu in (ViewBag.SidebarMenuModel as IEnumerable<SidebarMenuModel>))
            {
                <li class="treeview">
                    <a href="javascript:void(0)">
                        <i class="fa @parentMenu.Icon"></i> <span>@parentMenu.Name</span>
                        @if (parentMenu.ChildMenuList.Count > 0)
                        {
                            <i class="fa fa-angle-left pull-right"></i>
                            @*@parentMenu.ChildMenuList.Count*@
                        }
                    </a>
                    <ul class="treeview-menu">
                        @foreach (var childMenu in parentMenu.ChildMenuList)
                        {
                            <li>
                                <a rel="@childMenu.Controller" href="@Url.Action(childMenu.Action, childMenu.Controller)">
                                    <i class="fa @childMenu.Icon"></i>
                                    <span>@childMenu.Name</span>
                                </a>
                                @*<ul class="treeview-menu">
                                    @foreach (var childMenu_L2 in childMenu.ChildMenuList)
                                    {
                                        <li>
                                            <a rel="@childMenu_L2.Controller" href="@Url.Action(childMenu_L2.Action, childMenu_L2.Controller)">
                                                <i class="fa @childMenu_L2.Icon"></i>
                                                <span>@childMenu_L2.Name</span>
                                            </a>
                                        </li>
                                    }
                                </ul>*@
                            </li>
                        }
                    </ul>
                </li>
            }

    <li class="treeview">
        <a href="#"><i class="fa fa-link"></i> <span>新建提料单</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
