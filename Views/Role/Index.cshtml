@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/AdminLTE.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Skin/skin-blue.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/LTE-Control/CssCheck/style.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap-table/bootstrap-table.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/font-awesome/font-awesome.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrapvalidator/bootstrapValidator.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/toastr/toastr.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Tree/metroStyle.css")" rel="stylesheet" />
<h3><i>权限:</i></h3>
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-body box-profile">
                <div id="toolbar" class="btn-group">
                    <button id="btn_add" type="button" class="btn btn-default">
                        <span class="fa fa-plus" aria-hidden="true"></span> 新增
                    </button>
                    <button id="btn_edit" type="button" class="btn btn-default">
                        <span class="fa fa-pencil" aria-hidden="true"></span> 修改
                    </button>
                    <button id="btn_delete" type="button" class="btn btn-default">
                        <span class="fa fa-times" aria-hidden="true"></span> 删除
                    </button>
                    <button id="btn_SetModlePermission" type="button" class="btn btn-default">
                        <span class="fa fa-legal" aria-hidden="true"></span> 设置模块权限
                    </button>
                </div>

                <table id="tb_departments"></table>

                <!-- 模态框（Modal） -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">新增</h4>
                            </div>
                            <form id="form" name="form" class="form-horizontal" action="#" method="post">
                                <div class="modal-body">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">名称</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Name" name="Name" placeholder="名称">
                                            </div>
                                        </div>
                                        <input type="hidden" id="txt_LoginPwd">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">描述</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Description" name="Description" placeholder="描述">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">排序</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_OrderSort" name="OrderSort" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">启用</label>
                                            <div class="col-sm-8">
                                                <div class="checkbox">
                                                    <label>
                                                        <input id="chk_Enabled" type="checkbox" checked="checked" name="vehicle" value="Bike">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                    <button type="button" class="btn btn-primary" id="btn_submit"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                                </div>
                            </form>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
                <!-- 模态框（SetModle） -->
                <div class="modal fade" id="myModal_SetModle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">选择模块</h4>
                            </div>
                            <div class="modal-body">
                                @*<table id="tb_modals"></table>*@
                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="box box-primary">
                                            <div class="box-body box-profile">
                                                <ul id="treeDemo" class="ztree"></ul>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div class="col-md-5">
                                        <div class="box box-primary">
                                            <div class="box-body box-profile">
                                                <div id="checkbox_content" style="display:inline-block; width:100px;margin:0 0px;">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                <button type="button" class="btn btn-primary" id="btn_submit_SetModle"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                            </div>

                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
                <!-- 模态框（SetRole） -->
                <div class="modal fade" id="myModal_SetRole" style="width:800px;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">选择模块</h4>
                            </div>
                            <div class="modal-body">
                                <table id="tb_modals"></table>
                                <!-- /.box-body -->
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" id="btn_closefrom_SetRole" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                <button type="button" class="btn btn-primary" id="btn_submit_SetRole"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                            </div>

                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>
    </div>

</div>

