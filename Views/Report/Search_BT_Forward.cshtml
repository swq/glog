<div class="row">
    <div class="col-md-12" id="main_box">
        <div class="box box-primary direct-chat direct-chat-primary">
            <div class="box-header with-border">
                <h4 class="box-title" style="float:left;margin-top:5px">选择工程：&nbsp;&nbsp;</h4>
                <div style="width:200px;float:left">
                    <select class="form-control js-example-basic-single" style="width : 100%" id="Choise_PJ"></select>
                </div>
                <h4 class="box-title" style="float:left;margin-left:10px;margin-top:5px">BT号：&nbsp;&nbsp;</h4>
                <input style="width:200px;float:left" class="form-control input-sm" type="text" placeholder="BT号" id="txt_BT">
                <button class="btn btn-primary" type="button" id="Sreach" style="margin-left:10px;float:left">
                    <span class="fa fa-search"></span>&nbsp;查询
                </button>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle">
                        <i class="fa fa-comments"></i>
                    </button>
                </div>
            </div>
            <div class="box-body box-profile">
                <div style="float:left; margin-left:1px; width:calc(100% - 10px); margin-top:8px;">
                    <div id='MianSpread' style='width: 100%; height: 680px;'></div>
                </div>
            </div>
        </div>
    </div>
</div>
