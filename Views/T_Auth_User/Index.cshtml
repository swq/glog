@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/AdminLTE.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Skin/skin-blue.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/LTE-Control/CssCheck/style.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap-table/bootstrap-table.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/font-awesome/font-awesome.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrapvalidator/bootstrapValidator.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/toastr/toastr.min.css")" rel="stylesheet" />
<link href="~/Content/select2/select2.min.css" rel="stylesheet" />
<h3><i>用户:</i></h3>
<div class="row">
    <div class="col-md-12">

        <div class="box box-primary">

            <div class="box-body box-profile">
                <div id="toolbar" class="btn-group">
                    <button id="btn_add" type="button" class="btn btn-default">
                        <span class="fa fa-plus" aria-hidden="true"></span> 新增
                    </button>
                    <button id="btn_edit" type="button" class="btn btn-default">
                        <span class="fa fa-pencil" aria-hidden="true"></span> 修改
                    </button>
                    <button id="btn_delete" type="button" class="btn btn-default">
                        <span class="fa fa-times" aria-hidden="true"></span> 删除
                    </button>
                    <button id="btn_Auther" type="button" class="btn btn-default">
                        <span class="fa fa-users" aria-hidden="true"></span> 配置角色
                    </button>
                    <button id="btn_SetPro" type="button" class="btn btn-default">
                        <span class="fa fa-yelp" aria-hidden="true"></span> 重置工程
                    </button>
                    <button id="btn_resetkey" type="button" class="btn btn-default">
                        <span class="fa fa-key" aria-hidden="true"></span> 重置密码
                    </button>

                </div>

                <table id="tb_departments"></table>

                <!-- 模态框（Modal） -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">新增</h4>
                            </div>
                            <form id="form" name="form" class="form-horizontal" action="#" method="post">
                                <div class="modal-body">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">工号</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_LoginName" name="LoginName" placeholder="工号">
                                            </div>
                                        </div>

                                        <input type="hidden" id="txt_LoginPwd">

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">姓名</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_FullName" name="FullName" placeholder="姓名">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">电话</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Phone" name="Phone" placeholder="电话">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Email</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Email" name="Email" placeholder="Email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">启用</label>
                                            <div class="col-sm-8">
                                                <div class="checkbox">
                                                    <label>
                                                        <input id="chk_Enabled" type="checkbox" checked="checked" name="vehicle" value="Bike">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                    <button type="button" class="btn btn-primary" id="btn_submit"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                                </div>
                            </form>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
                <!-- 模态框（Auther） -->
                <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">设置角色</h4>
                            </div>
                            <form id="form" name="form" class="form-horizontal" action="#" method="post">
                                <div class="modal-body">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <div id="checkbox_content" style="display:inline-block; width:500px;margin:0 30px;">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                    <button type="button" class="btn btn-primary" id="btn_SetAuther_submit"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                                </div>
                            </form>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
                <!--设置工程-->
                <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">设置工程</h4>
                            </div>
                            <form id="form" name="form" class="form-horizontal" action="#" method="post">
                                <div class="modal-body">
                                    <div class="box-body">
                                        <div class="form-group">
                                            @*<div id="checkbox_content" style="display:inline-block; width:500px;margin:0 30px;">
                                            </div>*@
                                            <select class="form-control js-example-basic-multiple-limit" style="width : 100%" id="Choise_PJ"></select>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                    <button type="button" class="btn btn-primary" id="btn_SetPro_submit"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                                </div>
                            </form>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>
    </div>

</div>

