@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/AdminLTE.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Skin/skin-blue.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/LTE-Control/CssCheck/style.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap-table/bootstrap-table.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/font-awesome/font-awesome.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrapvalidator/bootstrapValidator.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/toastr/toastr.min.css")" rel="stylesheet" />

<style type="text/css">
    .intro{
        background-color : lightgreen;
    }
</style>
<h3><i>模块:</i></h3>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-body box-profile">
                <div id="toolbar" class="btn-group">
                    <button id="btn_add" type="button" class="btn btn-default">
                        <span class="fa fa-plus" aria-hidden="true"></span> 新增
                    </button>
                    <button id="btn_edit" type="button" class="btn btn-default">
                        <span class="fa fa-pencil" aria-hidden="true"></span> 修改
                    </button>
                    <button id="btn_delete" type="button" class="btn btn-default">
                        <span class="fa fa-times" aria-hidden="true"></span> 删除
                    </button>
                    <button id="btn_SetButton" type="button" class="btn btn-default">
                        <span class="fa fa-sitemap" aria-hidden="true"></span> 设置按钮
                    </button>
                </div>
                <table id="tb_departments"></table>

                <!-- 模态框（Modal） -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">新增</h4>
                            </div>
                            <form id="form" name="form" class="form-horizontal" action="#" method="post">
                                <div class="modal-body">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">模块(菜单)名称</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Name" name="Name" placeholder="模块(菜单)名称">
                                            </div>
                                        </div>
                                        <input type="hidden" id="txt_LoginPwd">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">模块编码</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Code" name="Code" placeholder="模块编码">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">上级模块</label>
                                            <div class="col-sm-8">
                                                <select class="form-control  select2" id="txt_ParentModule" style=" width:100%;"></select>

                                                @*<input class="form-control" id="txt_ParentModule" name="Icon" placeholder="上级模块" autocomplete="off" data-provide="typeahead">
                                                  <input type="hidden" id="ParentModule_Id">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">图标</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Icon" name="Icon" placeholder="图标">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Controller</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Controller" name="Controller" placeholder="Controller">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Action</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_Action" name="Action" placeholder="Action">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">排序</label>
                                            <div class="col-sm-8">
                                                <input class="form-control" id="txt_OrderSort" name="OrderSort" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">是否菜单</label>
                                            <div class="col-sm-8">
                                                <div class="checkbox">

                                                    <label>
                                                        <input id="chk_IsMenu" type="checkbox" checked="checked" name="vehicle" value="Bike">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">启用</label>
                                            <div class="col-sm-8">
                                                <div class="checkbox">
                                                    <label>
                                                        <input id="chk_Enabled" type="checkbox" checked="checked" name="vehicle" value="Bike">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                    <button type="button" class="btn btn-primary" id="btn_submit"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                                </div>
                            </form>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>

                <!-- 模态框（Modal） <div class="box-body">-->
                <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">设置权限</h4>
                            </div>
                            <form id="form" name="form" class="form-horizontal" action="#" method="post">
                                <div class="modal-body">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <div id="checkbox_content" style="display:inline-block; width:500px;margin:0 30px;">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" id="btn_closefrom" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>&nbsp;关闭</button>
                                    <button type="button" class="btn btn-primary" id="btn_SetButton_submit"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;保存</button>
                                </div>
                            </form>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/jQuery-2.2.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/dist/app.min.js"></script>
